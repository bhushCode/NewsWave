<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/adapter_publishedDate"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
          android:background="@color/shimmer_color"
       />
        <TextView
            android:id="@+id/adapter_author"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:background="@color/shimmer_color"
          />


        <LinearLayout
            android:id="@+id/adapter_ll1"
            android:layout_below="@id/adapter_publishedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="1dp"
                android:scaleType="fitXY"
                android:background="@color/shimmer_color"
                />

            <TextView
                android:id="@+id/adapter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/shimmer_color"
                android:textSize="20sp"
             />

            <TextView
                android:id="@+id/adapter_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/shimmer_color"
 />

            <TextView
                android:id="@+id/adapter_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/shimmer_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/adapter_seeMore"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@color/shimmer_color"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8A8A8A"
        android:layout_marginTop="1dp"
        android:layout_below="@id/rr1"
        android:layout_margin="5dp"
        />

</RelativeLayout>